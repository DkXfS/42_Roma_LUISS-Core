CREATE DATABASE IF NOT EXISTS $WORDPRESS_DB CHARACTER SET utf8 COLLATE utf8_general_ci;
CREATE USER IF NOT EXISTS '$MARIADB_USER'@'%' IDENTIFIED BY '$MARIADB_PSWD';
GRANT ALL PRIVILEGES ON $WORDPRESS_DB.* TO '$MARIADB_USER'@'%';
ALTER USER 'root'@'localhost' IDENTIFIED BY '$MARIADB_ROOT_PSWD';
FLUSH PRIVILEGES;